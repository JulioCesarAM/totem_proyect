<?xml version="1.0" encoding="UTF-8"?>
<template xml:space="preserve">
    <t t-name="EventView">
        <div id="bodyPage">
            <div id="siguiente" class="column slideIcon">
                <h1 class="prueba">&#10094;</h1>
            </div>
            <div id="content" class="column">
                <div id="banner">
                    <t t-if="widget.event.bannerPrincipalSelector=='img'">
                        <img id="imgbanner" t-attf-src="{{'/web/image/event.totem/' + widget.event.id + '/bannerImg'}}" style="width:864px;height:864px"/>
                    </t>
                    <!--<t t-if="widget.event.bannerPrincipalSelector=='vid'">
                        <video width="864" height="864">
                            <source t-attf-src="{{'data:video/mp4;base64,' + widget.event.videoField}}" type="video/mp4"/>
                        </video>
                    </t>-->
                    <t t-if="widget.event.bannerPrincipalSelector=='lvid'">
                        <iframe id="videobanner" t-attf-src="{{widget.event.urlVid + '?autoplay=1&amp;mute=1&amp;controls=0&amp;rel=0&amp;loop=1&amp;playlist=' + widget.event.urlVidId}}" style="width:864px;height:864px"></iframe>
                    </t>
                    <img id="eventBarcode" t-attf-src="{{'/report/barcode/?type=QR&amp;value=' + widget.event.qr + '&amp;width=120&amp;height=120'}}"/>
                </div>

                <!-- MODAL -->

                
                <div class="modal fade" id="mymodal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h3 class="modal-title" id="exampleModalLongTitle">
                                    <img t-attf-src="{{'/web/image/event.totem/' + widget.event.id + '/logo'}}" style="width:40px;height:40px;margin-right:10px;"/>
                                    <t t-esc="widget.event.titlePopUp"/>
                                </h3>
                            </div>
                            <div class="modal-body" style="display:table;">
                                <div style="font-size:180%;text-align:justify;"><t t-esc="widget.event.descriptionPopUp"/></div>
                                <p/>
                                <img t-attf-src="{{'/web/image/event.totem/' + widget.event.id + '/popUpImg'}}" style="width:100%;height:300px;"/>
                            </div>
                            <div class="modal-footer" style="position:relative;height:120px">
                                <img t-attf-src="{{'/report/barcode/?type=QR&amp;value=' + widget.event.urlWeb + '&amp;width=100&amp;height=100'}}" style="left:20px;position:absolute"/>
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- CIERRE DEL MODAL -->

                <div id="resto">
                    <h1 id="titulo"><t t-esc="widget.event.title"/></h1>
                    <div id="description"><t t-esc="widget.event.description"/></div>
                    <div class="slideshow-container carousel slide">
                        <div class="carousel-inner">
                            <t t-foreach="widget.event.sliderImg" t-as="i">
                                <div class="mySlides carousel-item active">
                                    <img class="d-block" t-attf-src="{{'/web/image/slider.totem/' + i + '/image_rute'}}" style="width:864px;height:460px"/>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
                <div class="linea"></div>
                <div id="footerPage">
                    <div class="column" id="companyDesc" ><t t-esc="widget.configuration.description"/></div>
                    <div class="column" id="companyCode"><img t-attf-src="{{'/report/barcode/?type=QR&amp;value=' + widget.configuration.qr + '&amp;width=150&amp;height=150'}}"/></div>
                </div>
            </div>
            <div id="atras" class="column slideIcon">
                <h1 class="prueba">&#10095;</h1>
            </div>
        </div>
    </t>
</template>