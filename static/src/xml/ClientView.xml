<?xml version="1.0" encoding="UTF-8"?>
<template xml:space="preserve">
    <t t-name="EventView">
        <div>
            <p><t t-esc="widget.event.name"/></p>
            <p><t t-esc="widget.event.title"/></p>
            <img src="/web/image/event.totem/2/bannerImg/"/>
            <p/>
            <t t-foreach="widget.event.sliderImg" t-as="i">
                <t t-set="a" t-value="/web/image/event.totem/+', #'+i+', #'+/sliderImg/"/>
                <t t-esc="a"/>
            </t>
            <p><t t-esc="widget.event.description"/></p>
            <p><t t-esc="widget.event.footer"/></p>
            <p><t t-esc="widget.event.qr"/></p>
        </div>
    </t>
</template>