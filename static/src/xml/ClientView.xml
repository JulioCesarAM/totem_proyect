<?xml version="1.0" encoding="UTF-8"?>
<template xml:space="preserve">
    <t t-name="EventView">
        <div id="bodyPage">
            <div id="siguiente" class="column slideIcon">
                <h1 class="flecha">&#10094;</h1>
            </div>
            <div id="content" class="column">
                <div id="banner">
                    <t t-if="widget.event.bannerPrincipalSelector=='img'">
                        <img id="imgbanner" t-attf-src="{{'data:image/png;base64, ' + widget.event.bannerImg}}" style="width:100%;height:100%"/>
                    </t>
                    <t t-if="widget.sliderBool == true">
                        <t t-if="widget.event.bannerPrincipalSelector=='lvid'">
                            <iframe id="videobanner" t-attf-src="{{widget.event.urlVid}}" style="width:100%;height:100%"></iframe>
                        </t>
                        <t t-if="widget.event.bannerPrincipalSelector=='rssVideo'">
                            <iframe id="videobanner" t-attf-src="{{widget.event.rssVideo}}" style="width:100%;height:100%"></iframe>
                        </t>
                        <div id="abajoDerecha">
                            <div class="containbarcode">
                                <img id="eventBarcode" t-attf-src="{{'/report/barcode/?type=QR&amp;value=' + widget.event.qr + '&amp;width=186&amp;height=177'}}"/>
                            </div>
                        </div>
                    </t>
                    <t t-if="widget.sliderBool == false &amp;&amp; widget.event.bannerPrincipalSelector!='img'">
                        <img id="imgbanner" t-attf-src="{{'data:image/png;base64, ' + widget.configuration.lostConnectionImg}}" style="width:1026px;height:864px"/>
                    </t>
                </div>


                <div id="resto">
                    <t t-if="widget.event.rssText == true">
                        <t t-if="widget.event.sliderImg.length > 0 &amp;&amp; widget.sliderBool == true">
                            <div class="description" style="height:374px;"><t t-set="i" t-value="0"/><t t-foreach="widget.event.description.title" t-as="nonsense"><div style="font-size: 120%;font-weight: bolder;text-align:center;"><t t-esc="widget.event.description.title[i]"/></div>
                                    <div style="white-space:normal;"><t t-esc="widget.event.description.description[i]"/></div>
                                    <div style="text-align:right"><t t-esc="widget.event.description.pubDate[i]"/></div><div style="text-align:right"><t t-esc="widget.event.description.creator[i]"/></div>
                                    <t t-set="i" t-value="i+1"/>
                                </t>
                            </div>
                            <div class="slideshow-container carousel slide">
                                <div class="carousel-inner" style="width:100%;height:100%">
                                    <t t-foreach="widget.event.sliderImg" t-as="i">
                                        <div class="mySlides carousel-item active" style="width:100%;height:100%">
                                            <img class="d-block" t-attf-src="{{'/web/image/slider.totem/' + i + '/image_rute'}}" style="width:100%;height:100%"/>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </t>
                    </t>
                    <t t-if="widget.event.rssText == false">
                        <h1 id="titulo"><t t-esc="widget.event.name"/></h1>
                        <t t-if="widget.event.sliderImg.length > 0 &amp;&amp; widget.sliderBool == true">
                            <div class="description" style="height:339px;"><t t-esc="widget.event.description"/></div>
                            <div class="slideshow-container carousel slide">
                                <div class="carousel-inner" style="width:100%;height:100%">
                                    <t t-foreach="widget.event.sliderImg" t-as="i">
                                        <div class="mySlides carousel-item active" style="width:100%;height:100%">
                                            <img class="d-block" t-attf-src="{{'/web/image/slider.totem/' + i + '/image_rute'}}" style="width:100%;height:100%"/>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </t>
                    </t>
                    <t t-if="widget.event.sliderImg.length == 0 || widget.sliderBool == false">
                        <t t-if="widget.event.rssText == false">
                            <div class="description" style="height:843px;padding-bottom:10px;"><t t-esc="widget.event.description"/></div>
                        </t>
                        <t t-if="widget.event.rssText == true">
                            <div class="description" style="height:339px;">
                                <div>dfhviahfodhddfsdfd dfhviahfodhddfsdfd dfhviahfodhddfsdfd dfhviahfodhddfsdfdvv v vdfhviahfodhddfsdfd dfhviahfodhddfsdfd dfhviahfodhddfsdfd dfhviahfodhddfsdfd dfhviahfodhddfsdfddfhviahfodhddfsdfd dfhviahfodhddfsdfd v v v dfhviahfodhddfsdfd dfhviahfodhddfsdfd dfhviahfodhddfsdfd dfhviahfodhddfsdfd dfhviahfodhddfsdfd dfhviahfodhddfsdfd v dfhviahfodhddfsdfd</div>
                            </div>
                        </t>
                    </t>
                </div>
                <div id="footerPage">
                    <div class="column" id="companyDesc" ><t t-esc="widget.configuration.description"/></div>
                    <div class="column" id="companyCode" ><img id="barfooter" t-attf-src="{{'/report/barcode/?type=QR&amp;value=' + widget.configuration.companyQr + '&amp;width=200&amp;height=192'}}"/></div> 
                </div>
            </div>
            <div id="atras" class="column slideIcon">
                <h1 class="flecha">&#10095;</h1>
            </div>

                <!-- MODAL -->
                
                <div class="modal fade" id="mymodal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h3 class="modal-title" id="exampleModalLongTitle">
                                    <t t-if="widget.sliderBool == true">
                                        <img t-attf-src="{{'/web/image/event.event/' + widget.event.id + '/logo'}}" style="width:40px;height:40px;margin-right:10px;"/>
                                    </t>
                                    <t t-esc="widget.event.titlePopUp"/>
                                </h3>
                            </div>
                            <div class="modal-body" style="display:table;">
                                <p style="font-size:180%;text-align:justify;"><t t-esc="widget.event.descriptionPopUp"/></p>
                                <t t-if="widget.sliderBool == true">
                                    <img t-attf-src="{{'/web/image/event.event/' + widget.event.id + '/popUpImg'}}" style="width:100%;height:300px;"/>
                                </t>    
                            </div>
                            <div class="modal-footer" style="position:relative;height:120px">
                                <t t-if="widget.sliderBool == true">
                                    <img t-attf-src="{{'/report/barcode/?type=QR&amp;value=' + widget.event.urlWeb + '&amp;width=100&amp;height=100'}}" style="left:20px;position:absolute"/>
                                </t>
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>

                <style id="estilosDeConfiguracion">
                    #bodyPage, .slideIcon{
                        background-image: url("/web/image/res.company/<t t-esc="widget.configuration.id"/>/backGroundImg");
                        background-color: black;
                    }
                    .flecha{
                        color: white;
                        color: <t t-esc="widget.configuration.colorLines"/>;
                    }
                    #footerPage, .slideIcon{
                        border: 1px solid white;
                        border: 1px solid <t t-esc="widget.configuration.colorLines"/>;
                    }
                    .description::-webkit-scrollbar {
                        background-color: transparent;
                    }
                    .description::-webkit-scrollbar-thumb {
                        background-color: #CCCCCC;
                        background-color: <t t-esc="widget.configuration.colorBar"/>;
                    }
                </style>

                <!-- CIERRE DEL MODAL -->
        </div>
    </t>
</template>