<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_id_tree_controller">
        <field name="name">totem.controllers.tree</field>
        <field name="model">totem.controllers</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <tree string="Controlador eventos">
                <field name="name" string="Nombre">
                </field>
            </tree>
        </field>
    </record>

        <record model="ir.ui.view" id="view_id_form_controller">
        <field name="name">totem.controllers.form</field>
        <field name="model">totem.controllers</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <form string="event form">
                <group colspan="4">
  
                    <group colspan="4" col="2">
                        <separator string="Configuracion de pantallas" colspan="2"/>
                        <field name="name" string="Nombre"/>
                        <field name="admin" string="Usuario"/>
                       <!-- <field name="events" string="Eventos asignados"/> -->
                    </group>


                </group>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_events_controller">
        <field name="name">Usuario-pantalla</field>
        <field name="res_model">totem.controllers</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="controladorPantalla" name="Asignar usuario-pantalla" parent="mainMenu" action="action_events_controller" />
</odoo>