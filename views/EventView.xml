<odoo>

    <!-- vista arbol eventos -->
    <record model="ir.ui.view" id="view_id_tree">
        <field name="name">event.event.tree</field>
        <field name="model">event.event</field>
        <field name="priority" eval="16"/>
        <field name="inherit_id" ref="event.view_event_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name]" position="after">
                <field name="sequence" widget='handle' />
                <!--<field name="name" string="Titulo"/>-->
            </xpath>
        </field>
    </record>

    <!-- vista formulario eventos -->
    <record model="ir.ui.view" id="view_id_form">
        <field name="name">event.event.form</field>
        <field name="model">event.event</field>
        <field name="priority" eval="16"/>
        <field name="inherit_id" ref="event.view_event_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='organizer_id']" position="before">
                <field name="visualizationType" string="Tipo Evento" required="1"/>
            </xpath>
            <xpath expr="//field[@name='date_begin']" position="replace">
                <field name="date_begin" string="Fecha inicio" required="0"/>
            </xpath>
            <!--

             <xpath expr="//field[@name='date_begin']" position="attributes">
            <attribute name="required">{'required':0}</attribute>
            <attribute name="required">False</attribute>
                 <field name="date_begin" string="Fecha inicio" required="0"/> 
            </xpath>


            -->
            <xpath expr="//field[@name='date_end']" position="replace">
                <field name="date_end" string="Fecha final" required="0"/>
            </xpath>
            <xpath expr="//field[@name='date_tz']" position="replace">
                <field name="date_tz" string="Zona horario" required="0"/>
            </xpath>
            <xpath expr="//page" position="after">
                <form string="Insertar Evento totem" attrs="{'invisible':[('visualizationType','!=','wbTm'),('visualizationType','!=','totem')]}">
                    <group colspan="4">

                        <group colspan="4" col="2">
                            <separator string="Informacion del producto/evento" colspan="2"/>
                            <!--<field name="title" string="Titulo" attrs="{'invisible':1}"/>-->
                            <!-- <field name="name" attrs="{'invisible':1}" /> -->
                            <field name="bannerPrincipalSelector" string="Selector contenido del banner principal"/>
                            <field name="bannerImg" attrs="{'invisible':[('bannerPrincipalSelector','!=','img')]}" string="Insertar imagen" />
                            <field name="videoField" attrs="{'invisible':[('bannerPrincipalSelector','!=','vid')]}" string="Insertar video"/>
                            <field name="urlVid" attrs="{'invisible':[('bannerPrincipalSelector','!=','lvid')]}" string="Insertar url video"/>
                            <field name="rssVideo" attrs="{'invisible':[('bannerPrincipalSelector','!=','rssVideo')]}" string="Insertar url de Rss"/>
                            <field name="qr" string = "Codigo QR"/>
                            <field name="rssText" widget="checkbox" string="Admitir RSS de texto" />
                            <field name="rssTextUrl" string="Insertar RSS de texto" attrs="{'invisible':[('rssText','!=',True)]}"/>
                            <field name="description" string="Descripcion" attrs="{'invisible':[('rssText','=',True)]}"/>


                            <field name="urlVidId" attrs="{'invisible':[('bannerPrincipalSelector','!=','Nunca_existira')]}"/>


                        </group>

                        <notebook colspan="4" col="2">

                            <page name="PopUp" string="Pop Up">
                                <group colspan="4" col="2">
                                    <field name="titlePopUp" string="Titulo pop up"/>
                                    <field name="urlWeb" string='CÃ³digo QR pop up' />
                                    <field name="descriptionPopUp" string="Descripcion pop up"/>
                                    <field name="logo" string="Logo"/>
                                    <field name="popUpImg" string="Imagen Pop Up"/>
                                </group>
                            </page>


                            <page name="image list" string="Slider de imagenes">
                                <field name="sliderImg" />

                            </page>

                            <page name="Configuracion fechas" string="configuracion de fechas">
                                <field name="fechas" />

                            </page>
                        </notebook>


                    </group>
                </form>

            </xpath>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_events_totem">
        <field name="name">Listado-eventos</field>
        <field name="res_model">event.event</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="abrir_description" model="ir.actions.client">
        <field name="name">Descripcion</field>
        <field name="tag">event_view</field>
        <field name="target">fullscreen</field>
    </record>

    <menuitem id="descriptionTest" name="Visualizar" parent="mainMenu" action="abrir_description"/>



    <menuitem id="eventList" name="Insertar Eventos" parent="mainMenu" action="action_events_totem" />


</odoo>
